{
    "name": "carousel/dto",
    "type": "library",
    "description": "PHP DTO",
    "keywords": [
        "carousel",
        "DTO"
    ],
    "homepage": "https://github.com/carousel/dto",
    "license": "MIT",
    "authors": [
        {
            "name": "Miroslav Trninic",
            "email": "miroslav.trninic@gmail.com",
            "homepage": "https://github.com/carousel/dto",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.0|~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : "6.1.*",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Carousel\\DTO\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "carousel\\DTO\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
